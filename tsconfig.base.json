{
  "compilerOptions": {
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@pet-markt/source"],
    "composite": false,
    "emitDeclarationOnly": false,
    "declaration": false,
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["es2022", "dom"]
  }
}

